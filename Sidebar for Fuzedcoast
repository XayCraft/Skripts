on join:
    while player is online:
        set title of player's scoreboard to "&d&lFuzed&8&lcoast"
        set line 15 of player's scoreboard to "&0&lPlaceHolder"
        set line 14 of player's scoreboard to "&d&lPlaceHolder"
        set line 13 of player's scoreboard to "&7"
        set line 12 of player's scoreboard to "&0&lBalance"
        set line 11 of player's scoreboard to "&d&l%balance of player%"
        set line 10 of player's scoreboard to "&7"
        set line 9 of player's scoreboard to "&0&lPlayers"
        set line 8 of player's scoreboard to "&d&l%amount of all players%"
        set line 4 of player's scoreboard to "&7"
        set line 3 of player's scoreboard to  "&0&lTPS"
        set line 2 of player's scoreboard to  "&d&l%tps%"
        set line 1 of player's scoreboard to "&7"
        wait 3 seconds
